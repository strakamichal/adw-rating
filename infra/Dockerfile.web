FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
WORKDIR /src
COPY Directory.Build.props .
COPY src/AdwRating.Domain/AdwRating.Domain.csproj src/AdwRating.Domain/
COPY src/AdwRating.ApiClient/AdwRating.ApiClient.csproj src/AdwRating.ApiClient/
COPY src/AdwRating.Web/AdwRating.Web.csproj src/AdwRating.Web/
RUN dotnet restore src/AdwRating.Web/AdwRating.Web.csproj
COPY src/ src/
RUN dotnet publish src/AdwRating.Web/AdwRating.Web.csproj -c Release -o /app --no-restore

FROM mcr.microsoft.com/dotnet/aspnet:10.0
WORKDIR /app
COPY --from=build /app .
ENV ASPNETCORE_HTTP_PORTS=8080
EXPOSE 8080
ENTRYPOINT ["dotnet", "AdwRating.Web.dll"]
