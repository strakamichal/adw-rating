# Coolify Setup Configuration
# Copy this file to coolify-setup.env and fill in your values.
# DO NOT commit coolify-setup.env (it contains secrets).

# Coolify instance
COOLIFY_URL=http://YOUR_VPS_IP:8000
COOLIFY_TOKEN=your-coolify-api-token

# Coolify resource IDs (find in Coolify UI URLs)
SERVER_UUID=xxx
# PROJECT_UUID=xxx        # Optional — if empty, script creates a new project
# PROJECT_NAME="ADW Rating"  # Used only when creating a new project
ENVIRONMENT_NAME=production

# Docker registry
GHCR_OWNER=your-github-username

# Domains (without protocol — script adds https://)
DOMAIN_WEB=rating.agilitydogsworld.com
DOMAIN_API=api.rating.agilitydogsworld.com

# Database — app connection string
DB_CONNECTION_STRING=Server=DOCKER_BRIDGE_IP,1433;Database=AdwRating;User Id=adwrating;Password=YOUR_PASSWORD;TrustServerCertificate=True

# Database — SA connection string for initial bootstrap (optional, remove after first deploy)
DB_ADMIN_CONNECTION_STRING=Server=DOCKER_BRIDGE_IP,1433;Database=master;User Id=sa;Password=YOUR_SA_PASSWORD;TrustServerCertificate=True
